<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".Manacha5Eng">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="755dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="manacha1main"
        android:scaleX="0.95"
        android:scaleY="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/manacha5eng" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="70dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:backgroundTint="#d9d9d9"
            android:cropToPadding="false"
            android:drawableRight="@drawable/arrow_back"
            android:textColor="@color/black"/>


        <Button
            android:id="@+id/locationbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:backgroundTint="#d9d9d9"
            android:drawableLeft="@drawable/location_on"
            android:text="Location"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/homebutton"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:backgroundTint="#d9d9d9"
            android:cropToPadding="false"
            android:drawableRight="@drawable/home_icon"
            android:textColor="@color/black"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>